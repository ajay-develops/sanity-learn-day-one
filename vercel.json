{
  "version": 2,
  "regions": ["bom1", "cdg1", "iad1"],
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/studio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "includeFiles": "static/**"
      }
    },
    {
      "src": "apps/tickets/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/studio/(.*)",
      "dest": "/apps/studio/$1"
    },
    {
      "src": "/studio",
      "dest": "/apps/studio/index.html"
    },
    {
      "src": "/tickets/(.*)",
      "dest": "/apps/tickets/$1"
    },
    {
      "src": "/tickets",
      "dest": "/apps/tickets/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/$1"
    }
  ]
}
